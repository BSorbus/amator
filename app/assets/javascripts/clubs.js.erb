$(document).ready(function() {
  var oClubtable = $('#clubs').DataTable({
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    scrollX: true,
    ajax: { 
      url: $('#clubs').data('source'),
      type: "POST"
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    columns: [
      { "targets": [0],
        "title": "ID",
        "visible": false,
        "searchable": false,
        "sortable": false }, 
      { "targets": [1],
        //"title": "<%= Individual.human_attribute_name('individual.number') %>" }, 
        "title": "Numer" }, 
      //{ "targets": [3],
      //  "title": "Wydane dnia" }, 
      { "targets": [2],
        "title": "Wa≈ºne do" }, 
      { "targets": [3],
        "title": "Znak" }, 
      { "targets": [4],
        "title": "Kategoria" }, 
      { "targets": [5],
        "title": "Moc" }, 
      { "targets": [6],
        "title": "Stacja" },
      { "targets": [7],
        "title": "Wnioskodawca" }
    ],
    order: [[ 1, "asc" ]],
    language: {
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });

  
  $('#clubs tbody').on('click', 'tr', function () {
    $(this).toggleClass('selected');
    var rowData = oClubtable.row( this ).data()[0];
    var newurl = window.location.protocol + '//' + window.location.host + '/clubs/' + rowData + '?locale=pl';
    window.location.href = newurl;
  });






  var oClub_en_table = $('#clubs_en').DataTable({
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    scrollX: true,
    ajax: { 
      url: $('#clubs_en').data('source'),
      type: "POST"
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    columns: [
      { "targets": [0],
        "title": "ID",
        "visible": false,
        "searchable": false,
        "sortable": false }, 
      { "targets": [1],
        "title": "Number" }, 
      //{ "targets": [3],
      //  "title": "Date of issue" }, 
      { "targets": [2],
        "title": "Valid thru" }, 
      { "targets": [3],
        "title": "Call sign" }, 
      { "targets": [4],
        "title": "Class" }, 
      { "targets": [5],
        "title": "Power" }, 
      { "targets": [6],
        "title": "Station" },
      { "targets": [7],
        "title": "Applicant" }
    ],
    order: [[ 1, "asc" ]],
    language: {
      url: '<%= asset_path("en.json.erb") %>'
    }
  });

  
  $('#clubs_en tbody').on('click', 'tr', function () {
    $(this).toggleClass('selected');
    var rowData = oClub_en_table.row( this ).data()[0];
    var newurl = window.location.protocol + '//' + window.location.host + '/clubs/' + rowData + '?locale=en';
    window.location.href = newurl;
  });

});
