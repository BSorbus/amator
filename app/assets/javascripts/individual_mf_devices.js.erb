$(document).ready(function() {
  var oIndividualMfDevicetable = $('#individual_mf_devices').DataTable({
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    scrollX: true,
    ajax: { 
      url: $('#individual_mf_devices').data('source'),
      type: "POST"
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    columns: [
      { "targets": [0],
        "title": "ID",
        "visible": false,
        "searchable": false,
        "sortable": false }, 
      { "targets": [1],
        "title": "Numer" }, 
      //{ "targets": [3],
      //  "title": "Wydane dnia" }, 
      { "targets": [2],
        "title": "Ważne do" }, 
      { "targets": [3],
        "title": "Znak" }, 
      { "targets": [4],
        "title": "Kategoria" }, 
      { "targets": [5],
        "title": "Moc" }, 
      { "targets": [6],
        "title": "Rodzaj stacji" },
      { "targets": [7],
        "title": "Emisja" },
      { "targets": [8],
        "title": "Częstotliwość wej." },
      { "targets": [9],
        "title": "Częstotliwość wyj." },
      { "targets": [10],
        "title": "Stacja" }
    ],
    order: [[ 1, "asc" ]],
    language: {
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });

  
  $('#individual_mf_devices tbody').on('click', 'tr', function () {
    $(this).toggleClass('selected');
    var rowData = oIndividualMfDevicetable.row( this ).data()[0];
    var newurl = window.location.protocol + '//' + window.location.host + '/individual_mf_devices/' + rowData + '?locale=pl';
    window.location.href = newurl;
  });






  var oIndividualMfDevice_en_table = $('#individual_mf_devices_en').DataTable({
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    scrollX: true,
    ajax: { 
      url: $('#individual_mf_devices_en').data('source'),
      type: "POST"
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    columns: [
      { "targets": [0],
        "title": "ID",
        "visible": false,
        "searchable": false,
        "sortable": false }, 
      { "targets": [1],
        "title": "Number" }, 
      //{ "targets": [3],
      //  "title": "Date of issue" }, 
      { "targets": [2],
        "title": "Valid thru" }, 
      { "targets": [3],
        "title": "Call sign" }, 
      { "targets": [4],
        "title": "Class" }, 
      { "targets": [5],
        "title": "Power" }, 
      { "targets": [6],
        "title": "Station type" },
      { "targets": [7],
        "title": "Emission" },
      { "targets": [8],
        "title": "Input frequency" },
      { "targets": [9],
        "title": "Output frequency" },
      { "targets": [10],
        "title": "Station" }
    ],
    order: [[ 1, "asc" ]],
    language: {
      url: '<%= asset_path("en.json.erb") %>'
    }
  });

  
  $('#individual_mf_devices_en tbody').on('click', 'tr', function () {
    $(this).toggleClass('selected');
    var rowData = oIndividualMfDevice_en_table.row( this ).data()[0];
    var newurl = window.location.protocol + '//' + window.location.host + '/individual_mf_devices/' + rowData + '?locale=en';
    window.location.href = newurl;
  });

});
