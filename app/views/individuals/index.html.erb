        <th> 6 Station location</th>
      </tr>
    </thead>

    <tbody>
       <!--data from JSON -->
    </tbody>
  </table>
</div> <!--/col-sm-12 -->


<div class="col-sm-12">

  <%= link_to t('download', default: t("helpers.links.download")), export_individuals_path( :format => "csv" ), 
                            :class => 'btn btn-primary glyphicon glyphicon-download' %>

  <% if user_signed_in? %>
    <% if policy(Individual).new? %>
      <%= link_to t('New', default: t("helpers.links.new")), new_individual_path, 
                            :class => 'btn btn-primary glyphicon glyphicon-plus' %> 
    <% end %>
  <% end %>


